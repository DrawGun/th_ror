<% if notice || alert %>
  $("#alerts").html('<%= j render "layouts/notice" %>')
<% end %>

<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $(".question-errors").append('<p><%= j message %></p>')
  <% end %>
<% else %>
  $('#question-info').html('<%= j render @question %>');
  $('.edit-question-link').click(function(e) {
      e.preventDefault();
      $(this).hide();
      $('form#edit-question').removeClass('d-none');
    $('#question .question-body').addClass('d-none');
  });
<% end %>
